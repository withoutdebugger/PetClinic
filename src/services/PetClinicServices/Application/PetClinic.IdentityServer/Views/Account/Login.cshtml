@model PetClinic.IdentityServer.ViewModels.LoginViewModel
@if (Model.EnableLocalLogin)
{
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
        <div class="block-center mt-4 wd-xl col-lg-6 col-md-6 col-sm-6">
            <!-- START card-->
            <div class="card card-flat">
                <div class="card-header text-center bg-clinic">
                    <a href="#">
                        <img class="block-center rounded" width="120" src="~/logo2.png" alt="Image" />
                    </a>
                </div>
                <div class="card-body">
                    <p class="text-center py-2">INICIE SESIÓN</p>
                    <form class="mb-3" id="loginForm" novalidate="novalidate" method="post">
                        <div class="form-group">
                            @if (Model.LoginFailure.HasValue == true)
                            {
                                <h6 class="text-danger text-center">@Model.Error</h6>
                            }
                            <div class="input-group with-focus">
                                <input asp-for="User" class="form-control border-right-0" id="exampleInputEmail1" type="email" placeholder="Ingrese usuario" autocomplete="off" required="required" />
                                <div class="input-group-append">
                                    <span class="input-group-text text-muted bg-transparent border-left-0">
                                        <em class="fa fa-envelope"></em>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group with-focus">
                                <input class="form-control border-right-0" id="exampleInputPassword1" asp-for="Password" type="password" placeholder="Ingrese contraseña" required="required" />
                                <div class="input-group-append">
                                    <span class="input-group-text text-muted bg-transparent border-left-0">
                                        <em class="fa fa-lock"></em>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-block bg-clinic mt-3" name="button" value="login">Aceptar</button>
                    </form>
                </div>
            </div>
            <!-- END card-->
            <div class="p-3 text-center">
                <span class="mr-2">&copy;</span>
                <span>2019</span>
                <span class="mr-2">-</span>
                <span>PetClinic</span>
                <br />
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
    </div>

}
